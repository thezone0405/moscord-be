{
  "name": "moscord-api",
  "version": "1.0.0",
  "description": "moscord assessement rest api",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && babel -d ./build ./src -s && mkdirp ./build/public/files",
    "start": "if-env cross-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "babel-watch -L src/index.js babel-node",
    "start:prod": "node ./build/index.js",

    "unit-test": "jest test/unit-test --watch"
  },
  "author": "EDZ",
  "license": "ISC",
  "dependencies": {
    "12factor-config": "^2.0.0",
    "app-module-path": "^2.2.0",
    "compression": "^1.7.4",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "if-env": "^1.0.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.4.3",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-source-map-support": "^2.0.1",
    "babel-watch": "^7.5.0",
    "jest": "^27.2.0"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src",
      "test"
    ],
    "transform": {
      ".js": "<rootDir>/node_modules/babel-jest"
    },
    "collectCoverage": true,
    "testEnvironment": "node"
  }
}
